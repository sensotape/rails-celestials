<div class="range-slider">
  <input name="min" value='<%= @temp_min %>' min='<%= @min_price %>' max='<%= @max_price %>' step="1" type="range"/>
  <input name="max" value='<%= @temp_max %>' min='<%= @min_price %>' max='<%= @max_price %>' step="1" type="range"/>
  <svg width="100%" height="24">
    <line x1="4" y1="0" x2="300" y2="0" stroke="#444" stroke-width="12" stroke-dasharray="1 28"></line>
  </svg>
  <span>
    from
    <input type="number" value='<%= @temp_min %>' min='<%= @min_price %>' max='<%= @max_price %>' style="color: black" />
    to
    <input type="number" value='<%= @temp_max %>' min='<%= @min_price %>' max='<%= @max_price %>' style="color: black" />
  </span>
</div>
